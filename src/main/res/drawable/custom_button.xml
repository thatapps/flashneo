<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#ff4270ef"/>
            <stroke
                    android:width="1dp"
                    android:color="#243E7F"/>
            <corners
                    android:radius="10dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#ff4270ef"
                    android:endColor="#243E7F"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="#243E7F"/>
            <corners
                    android:radius="10dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>

</selector>